<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt" xmlns="sap.m"
	controllerName="MT.SMT_Managment.controller.leaveAndAssetView" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Title" showHeader="false">
				<tnt:ToolHeader>
					<tnt:ToolHeaderUtilitySeparator/>
					<ToolbarSpacer>
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px"/>
						</layoutData>
					</ToolbarSpacer>
					<Button icon="sap-icon://log" press="onPressLogout">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow"/>
						</layoutData>
					</Button>
				</tnt:ToolHeader>
				<content>
					<IconTabBar id="idIconTabBarNoIcons" class="sapUiResponsiveContentPadding leftPadding" expanded="true">
						<items>
							<IconTabFilter class="leftPadding" text="Leave">
								<Table id="idProductsTable" inset="false" items="{/leave}">
									<infoToolbar>
										<OverflowToolbar>
											<Label text="Leave requestes"/>
										</OverflowToolbar>
									</infoToolbar>
									<columns>
										<Column width="12em">
											<Text text="Employee ID"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true">
											<Text text="Reason"/>
										</Column>
										<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
											<Text text="Dimensions"/>
										</Column>
										<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
											<Text text="Weight"/>
										</Column>
										<Column hAlign="End">
											<Text text="Price"/>
										</Column>
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<ObjectIdentifier title="{Name}" text="{ProductId}"/>
												<Text text="{SupplierName}"/>
												<Text text="{Width} x {Depth} x {Height} {DimUnit}"/>
												<ObjectNumber number="{WeightMeasure}" unit="{WeightUnit}"
													state="{ parts: [ {path: 'WeightMeasure'}, {path: 'WeightUnit'} ], formatter: 'sap.m.sample.Table.Formatter.weightState' }"/>
												<ObjectNumber
													number="{ parts:[{path:'Price'},{path:'CurrencyCode'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"
													unit="{CurrencyCode}"/>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</IconTabFilter>
							<IconTabFilter class="leftPadding" text="Asset"></IconTabFilter>
						</items>
					</IconTabBar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>