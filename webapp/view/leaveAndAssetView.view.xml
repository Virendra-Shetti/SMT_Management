<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt" xmlns="sap.m"
	controllerName="MT.SMT_Managment.controller.leaveAndAssetView" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Title" showHeader="false">
				<!--<tnt:ToolHeader>-->
				<!--	<tnt:ToolHeaderUtilitySeparator/>-->
				<!--	<ToolbarSpacer>-->
				<!--		<layoutData>-->
				<!--			<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px"/>-->
				<!--		</layoutData>-->
				<!--	</ToolbarSpacer>-->
				<!--	<Button icon="sap-icon://log" press="onPressLogout">-->
				<!--		<layoutData>-->
				<!--			<OverflowToolbarLayoutData priority="NeverOverflow"/>-->
				<!--		</layoutData>-->
				<!--	</Button>-->
				<!--</tnt:ToolHeader>-->
				<tnt:ToolHeader>
					<ToolbarSpacer width="1em"/>
					<Image src="http://www.signiwis.com/images/margo.png" width="5em"/>
					<SearchField liveChange="onSearch" width="50%" class="floatLeft"/>
					<ToolbarSpacer/>
					<Text class="headerText" text="{i18n>headerSigniwis}"/>
					<ToolbarSpacer/>
					<Button type="Transparent" icon="sap-icon://log" tooltip="{i18n>logoutButton}" press="onPressLogout"/>
				</tnt:ToolHeader>
				<headerContent>
					<Toolbar id="idDetailPage" width="100%"></Toolbar>
				</headerContent>
				<content>
					<IconTabBar id="idIconTabBarNoIcons" class="sapUiResponsiveContentPadding leftPadding" expanded="true">
						<items>
							<IconTabFilter class="leftPadding" text="Leave">
								<Table id="idLeaveTable" inset="false" items="{DOB>/Leave}">
									<infoToolbar>
										<OverflowToolbar>
											<Label text="Leave requestes"/>
										</OverflowToolbar>
									</infoToolbar>
									<columns>
										<Column width="12em">
											<Text text="Employee ID"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true">
											<Text text="Reason"/>
										</Column>
										<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
											<Text text="From-date"/>
										</Column>
										<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
											<Text text="To-date"/>
										</Column>
										<Column hAlign="End">
											<Text text="Status"/>
										</Column>
									</columns>
									<items >
										<ColumnListItem type="Navigation" press="onPressLeaveApprovel">
											<cells>
												<Text text="{DOB>empId}"/>
												<Text text="{DOB>Reason}"/>
												<Text text="{DOB>Fdate}"/>
												<Text text="{DOB>Tdate}"/>
												<Text text="{DOB>Status}"/>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</IconTabFilter>
							<IconTabFilter class="leftPadding" text="Asset">
								<Table id="idAssetsTable" inset="false" items="{DOB>/Asset}">
									<infoToolbar>
										<OverflowToolbar>
											<Label text="Leave requestes"/>
										</OverflowToolbar>
									</infoToolbar>
									<columns>
										<Column width="12em">
											<Text text="Employee ID"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true">
											<Text text="Asset Id"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true">
											<Text text="Asset Name"/>
										</Column>
										<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
											<Text text="Asset-date"/>
										</Column>
										<Column hAlign="End">
											<Text text="Status"/>
										</Column>
									</columns>
									<items >
										<ColumnListItem type="Navigation" press="onPressAssetApprovel">
											<cells>
												<Text text="{DOB>empId}"/>
												<Text text="{DOB>assetId}"/>
												<Text text="{DOB>AssetName}"/>
												<Text text="{DOB>Tdate}"/>
												<Text text="{DOB>Status}"/>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>