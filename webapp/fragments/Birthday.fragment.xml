<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified">
	<Dialog title="Birthdays" id="thismonthBirthdayListFragment" showHeader="false">
		<l:VerticalLayout class="sapUiContentPadding">
			<l:content>
				<Table id="idthismonthBirthDayTable" inset="false" items="{DOB>/birthDay}" width="20em">
					<infoToolbar>
						<OverflowToolbar>
							<Label text="This month birthday list"/>
						</OverflowToolbar>
					</infoToolbar>
					<columns>
						<Column width="12em">
							<Text text="Emplotee name"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="Date"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{DOB>empName}"/>
								<Text text="{DOB>date}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</l:content>
		</l:VerticalLayout>
	</Dialog>
</core:FragmentDefinition>